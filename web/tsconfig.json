{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],    
    "jsx": "react-jsx",
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*.tsx"],
  "exclude": [
    "node_modules"
  ]
}